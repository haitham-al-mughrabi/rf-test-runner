{
  "name": "rf-test-runner",
  "displayName": "Robot Framework Test Runner",
  "description": "Run Robot Framework tests with configurable options and manage results service",
  "version": "1.0.0",
  "publisher": "Haitham-m-almughrabi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/haitham-al-mughrabi/rf-test-runner"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Testing",
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rf-test-runner",
          "title": "RF Test Runner",
          "icon": "resources/robot.svg"
        }
      ]
    },
    "views": {
      "rf-test-runner": [
        {
          "type": "webview",
          "id": "rfTestRunner.configView",
          "name": "Test Configuration"
        }
      ]
    },
    "commands": [
      {
        "command": "rfTestRunner.startResultsService",
        "title": "RF: Start Results Service"
      },
      {
        "command": "rfTestRunner.stopResultsService",
        "title": "RF: Stop Results Service"
      },
      {
        "command": "rfTestRunner.runTests",
        "title": "RF: Run Tests (Docker)"
      },
      {
        "command": "rfTestRunner.runTestsLocal",
        "title": "RF: Run Tests (Local)"
      },
      {
        "command": "rfTestRunner.refreshTests",
        "title": "RF: Refresh Test List"
      }
    ],
    "configuration": {
      "title": "RF Test Runner",
      "properties": {
        "rfTestRunner.config": {
          "type": "object",
          "default": {},
          "description": "Configuration for Robot Framework test execution",
          "properties": {
            "captchaSolver": { "type": "boolean", "default": true },
            "windowFull": { "type": "boolean", "default": false },
            "windowMaximized": { "type": "boolean", "default": false },
            "headless": { "type": "boolean", "default": false },
            "runOffline": { "type": "boolean", "default": false },
            "devTools": { "type": "boolean", "default": false },
            "chromeSecuritySandbox": { "type": "boolean", "default": false },
            "playwrightTracing": { "type": "boolean", "default": false },
            "developmentEnvironment": { "type": "string", "default": "uat" },
            "executionEnv": { "type": "string", "default": "local" },
            "omitContent": { "type": "boolean", "default": false },
            "recordVideo": { "type": "boolean", "default": false },
            "enableHar": { "type": "boolean", "default": false },
            "windowHeight": { "type": "number", "default": 1080 },
            "windowWidth": { "type": "number", "default": 1920 },
            "contextType": { "type": "string", "default": "NORMAL" },
            "logLevel": { "type": "string", "default": "TRACE" },
            "reportTitle": { "type": "string", "default": "Unified Automation Regression Testing Report" },
            "customVariables": { "type": "string", "default": "" },
            "maximizeBrowser": { "type": "boolean", "default": false },
            "autoCloseBrowser": { "type": "boolean", "default": true },
            "keepVncOpen": { "type": "boolean", "default": false },
            "fullWidthViewport": { "type": "boolean", "default": false },
            "imageName": { "type": "string", "default": "robot-framework-custom:latest" },
            "installDependencies": { "type": "boolean", "default": false },
            "checkDeps": { "type": "boolean", "default": false }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "build": "npm run compile && vsce package",
    "build-prod": "./build-prod.sh",
    "clean": "rm -rf out/ && rm -f *.vsix"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  }
}
